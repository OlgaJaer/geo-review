<div class="review">
    <div class="header" id="header">
        <div class="title">
            <img class="title__pic" src=""/>
            <div class="title__text">{{ address }}</div>        
        </div>
        <div class="header__close" id="closeForm"></div>
    </div>
    <div class="review__content">
        <ul class="review__list" id="reviewList">
            {{#each reviews}}
            <li class="review__item">
                <div class="review__title">
                    <div class="review__name">{{ name }}</div>
                    <div class="review__place">{{ place }}</div>
                    <div class="review__date">{{ date }}</div>
                </div>    
                <div class="review__text">{{ textReview }}</div>
            </li>
            {{/each}}
        </ul>
    </div>
    <form class="form" name="form" action="">
        <div class="form__title">ваш отзыв</div>
        <input type="text" name="form"  id="name" class="form__input form__input--name" placeholder="Ваше имя">
        <input type="text" name="form" id="place" class="form__input form__input--place" placeholder="Укажите место">
        <textarea  id="textReview" name="form"  class="form__input form__input--review" placeholder="Поделитесь впечатлениями"></textarea>
        <button type="submith" class="form__btn" id="save">Добавить</button>
    </form>
</div>